{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
            "~framework/*": [
        "framework/*"
      ],
      "~utils/*": [
        "lib/utils/*"
      ],
      "~specs/*": [
        "specs/*"
      ],
      "~lib/*": [
        "lib/*"
      ]
    }
  },
  "include": [
    "./**/*.ts"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}